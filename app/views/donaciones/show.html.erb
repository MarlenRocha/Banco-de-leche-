<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>
<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Donación</h1>
</div>


<div class="mostrar-contenedor container mt-4 mb-4  p-4 rounded">


<div class="row p-2">
    <div class="col-6">
      <p class="text-right font-weight-bold">Fecha de registro:</p> 
    </div>
    <div class="col-6">
      <p><%= @donacion.fecha_registro_donacion %></p>
    </div>
  </div>

  <div class="row p-2">
    <div class="col-6">
      <p class="text-right font-weight-bold">Curp de donadora:</p> 
    </div>
    <div class="col-6">
      <p><%= @donacion.donadora.curp %></p>
    </div>
  </div>

  <div class="row p-2">
    <div class="col-6">
      <p class="text-right font-weight-bold">Donadora:</p> 
    </div>
    <div class="col-6">
      <p><%= @donacion.donadora.nombre %><%= " "%><%= @donacion.donadora.paterno %><%= " "%><%= @donacion.donadora.materno %></p>
    </div>
  </div>

  <div class="row p-2">
    <div class="col-6">
      <p class="text-right font-weight-bold">Tipo de donación:</p> 
    </div>
    <div class="col-6">
      <p><%= @donacion.tipo_donacion %></p>
    </div>
  </div>
</div>


<%= link_to 'Editar', edit_donacion_path(@donacion), :class => "btng btn mr-2" %>
<%= link_to 'Regresar', donaciones_path, :class => "btng btn" %>