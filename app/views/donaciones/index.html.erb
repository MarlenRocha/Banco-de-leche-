<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>

<div class="col-md-12 mb-4 text-center" >
      <p id="alert"><%= alert %></p>
</div>
<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Donaciones</h1>
</div>

<div class="col-md-12 pt-4">
    <%= link_to 'Nueva donación', new_donacion_path, :class => "btng btn" %>
</div> 

<div class="col-md-12 pt-4">
     <h4>Búsqueda</h4>
  <%= form_tag(buscar_donacion_path, method: :post, :class => "form-inline") do %>
      <%= date_field_tag 'fecha_registro_donacion', nil, placeholder: 'Fecha de registro', :class => "form-control mb-2 mr-sm-2" %>
      
      <button class="search btng btn mb-2"> Buscar</button>
  <% end %>    
</div>

<div class="col-md-12 pt-4 table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Fecha de registro de donación</th>
      <th>Curp de la donadora</th>
      <th>Tipo de donación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donaciones.each do |donacion| %>
      <tr>
        <td><%= donacion.fecha_registro_donacion %></td>
        <td><%= donacion.donadora.curp %></td>
        <td><%= donacion.tipo_donacion %></td>

        <td><%= link_to content_tag(:i, nil, class: "mostrar fas fa-eye", :title=> "Mostar"),donacion %></td>

        <td><%= link_to content_tag(:i, nil, class: "editar fas fa-edit", :title=> "Editar"),edit_donacion_path(donacion) %></td>
                   
        <td><%= link_to content_tag(:i, nil, class: "eliminar fas fa-times", :title=> "Eliminar"), donacion, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<div class="mx-auto">
  <%= will_paginate @donaciones %>
</div>