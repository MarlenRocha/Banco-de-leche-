<div class="col-md-12 pt-4">

<%= form_with(model: nacionalidad, id: 'formulario_nacionalidades', local: true) do |form| %>
  <% if nacionalidad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(nacionalidad.errors.count, "error") %> prohibited this nacionalidad from being saved:</h2>

      <ul>
      <% nacionalidad.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-row">
        <div class="form-group col-md-6">
            <%= form.label :nombre %>
            <%= form.text_field :nombre, :class => "form-control" %>            
        </div>
        <div class="form-group col-md-6">
            <%= form.label :descripción %>
            <%= form.text_field :descripcion, :class => "form-control" %>            
        </div> 
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
           <%= form.label :tipo %>
    <%= form.text_field :tipo, :class => "form-control" %>       
        </div>
        <div class="form-group col-md-6">
            <%= form.label :país_id %>
    <%= form.select(:pais_id, @paises.collect{ |e| [e.nombre, e.id]}, {include_blank: 'Seleccionar uno'}, :class => "form-control") %>
        </div>
        
    </div>

    <div class="form-row">
      <div class="form-group col-md-6">
           <%= form.label :territorio %>
    <%= form.text_field :territorio, :class => "form-control" %>    
        </div>
         <div class="form-group col-md-6">
            <%= form.label :espacio_geográfico %>
    <%= form.text_field :espacio_geografico, :class => "form-control" %>        
        </div> 
    </div>

  
  <%= form.submit "Guardar", :class => "btng btn" %>

  <%= link_to 'Regresar', nacionalidades_path, :class => "btng btn" %>

<% end %>

</div>

    

