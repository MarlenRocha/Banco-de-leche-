<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>
<div class="col-md-12 mb-4 text-center" >
      <p id="alert"><%= alert %></p>
</div>
<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Tipos de usuario</h1>
</div>

<div class="col-md-12 pt-4">
    <%= link_to 'Nuevo tipo', tipousuario_nuevo_path, :class => "btng btn" %>
</div> 


<div class="col-md-12 pt-4">
     <h4>Búsqueda</h4>
  <%= form_tag(buscar_tipousuario_path, method: :post, :class => "form-inline") do %>
      <%= text_field_tag 'nombre', nil, placeholder: 'Nombre', :class => "form-control mb-2 mr-sm-2" %>
       
      <%= text_field_tag 'salario', nil, placeholder: 'Salario', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'rango', nil, placeholder: 'Rango', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'seguro', nil, placeholder: 'Seguro médico', :class => "form-control mb-2 mr-sm-2" %>
      <%= text_field_tag 'vacaciones', nil, placeholder: 'Días de vacaciones', :class => "form-control mb-2 mr-sm-2" %>  
      <button class="search btng btn mb-2"> Buscar</button>
  <% end %>    
</div>

<div class="col-md-12 pt-4 table-responsive-sm">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Descripción</th>
      <th scope="col">Salario</th>
      <th scope="col">Rango</th>
      <th scope="col">Seguro médico</th>
      <th scope="col">Días de vacaciones</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tipousuarios.each do |tipousuario| %>
      <tr>
        <td><%= tipousuario.nombre %></td>
        <td><%= tipousuario.descripcion %></td>
        <td><%= tipousuario.salario %></td>
        <td><%= tipousuario.rango %></td>
        <td><%= tipousuario.seguro %></td>
        <td><%= tipousuario.vacaciones %></td>
        <td><%= link_to content_tag(:i, nil, class: "mostrar fas fa-eye", :title=> "Mostar"),tipousuario_mostrar_path(tipousuario.id) %></td>

        <td><%= link_to content_tag(:i, nil, class: "editar fas fa-edit", :title=> "Editar"),tipousuario_editar_path(tipousuario.id) %></td>
                   
        <td><%= link_to content_tag(:i, nil, class: "eliminar fas fa-times", :title=> "Eliminar"), tipousuario_eliminar_path(tipousuario.id), method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

</div><div class="mx-auto">
  <%= will_paginate @tipousuario %>
</div>