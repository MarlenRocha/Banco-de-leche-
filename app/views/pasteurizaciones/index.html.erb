<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>
<div class="col-md-12 mb-4 text-center" >
      <p id="alert"><%= alert %></p>
</div>

<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Registros de pasteurizaciones</h1>
</div>

<div class="col-md-12 pt-4">
    <%= link_to 'Nuevo registro',  new_pasteurizacion_path, :class => "btng btn" %>
</div> 

<div class="col-md-12 pt-4 table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Pasteurización</th>
      <th>Acidez dornic</th>
      <th>Cantidad almacenada</th>
      <th>Cantidad desechada</th>
      <th>Cantidad total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pasteurizaciones.each do |pasteurizacion| %>
      <tr>
        <td><%= pasteurizacion.pasteurizacion %></td>
        <td><%= pasteurizacion.acidez_dornic %></td>
        <td><%= pasteurizacion.cantidad_almacenada %></td>
        <td><%= pasteurizacion.cantidad_desechada %></td>
        <td><%= pasteurizacion.cantidad %></td>
        <td><%= link_to content_tag(:i, nil, class: "mostrar fas fa-eye", :title=> "Mostar"),pasteurizacion %></td>

        <td><%= link_to content_tag(:i, nil, class: "editar fas fa-edit", :title=> "Editar"),edit_pasteurizacion_path(pasteurizacion)  %></td>
                   
        <td><%= link_to content_tag(:i, nil, class: "eliminar fas fa-times", :title=> "Eliminar"), pasteurizacion, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<div class="mx-auto">
  <%= will_paginate @pasteurizaciones %>
</div>