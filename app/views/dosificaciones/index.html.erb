<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>
<div class="col-md-12 mb-4 text-center" >
      <p id="alert"><%= alert %></p>
</div>

<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Dosificaciones</h1>
</div>

<div class="col-md-12 pt-4">
    <%= link_to 'Nuevo registro', new_dosificacion_path, :class => "btng btn" %>
</div> 

<div class="col-md-12 pt-4 table-responsive">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Recién nacido</th>
      <th>Fecha dosificación</th>
      <th>Dosificación</th>
      <th>Toma</th>
      <th>Administración</th>
      <th>Área</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dosificaciones.each do |dosificacion| %>
      <tr>
        <td><%= dosificacion.reciennacido.nombre_madre %></td>
        <td><%= dosificacion.fecha_dosificacion %></td>
        <td><%= dosificacion.dosificacion %></td>
        <td><%= dosificacion.toma %></td>
        <td><%= dosificacion.administracion %></td>      
        <td><%= dosificacion.area.nombre %></td>
        

         <td><%= link_to content_tag(:i, nil, class: "mostrar fas fa-eye", :title=> "Mostar"),dosificacion %></td>

        <td><%= link_to content_tag(:i, nil, class: "editar fas fa-edit", :title=> "Editar"),edit_dosificacion_path(dosificacion) %></td>
                   
        <td><%= link_to content_tag(:i, nil, class: "eliminar fas fa-times", :title=> "Eliminar"), dosificacion, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<div class="mx-auto">
  <%= will_paginate @dosificaciones %>
</div>