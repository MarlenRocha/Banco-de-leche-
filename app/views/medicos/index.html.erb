<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>
<div class="col-md-12 mb-4 text-center" >
      <p id="alert"><%= alert %></p>
</div>

<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Médicos</h1>
</div>

<div class="col-md-12 pt-4">
    <%= link_to 'Nuevo médico', new_medico_path, :class => "btng btn" %>
</div> 

<div class="col-md-12 pt-4">
     <h4>Búsqueda</h4>
  <%= form_tag(buscar_medico_path, method: :post, :class => "form-inline") do %>
      <%= text_field_tag 'nombre', nil, placeholder: 'Nombre', :class => "form-control mb-2 mr-sm-2" %>
      <%= text_field_tag 'paterno', nil, placeholder: 'Apellido paterno', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'materno', nil, placeholder: 'Apellido materno', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'edad', nil, placeholder: 'Edad', :class => "form-control mb-2 mr-sm-2" %> 
      <button class="search btng btn mb-2"> Buscar</button>
  <% end %>    
</div>

<div class="col-md-12 pt-4 table-responsive-sm">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Paterno</th>
      <th>Materno</th>
      <th>Sexo</th>
      <th>Telefono</th>
      <th>Edad</th>
      <th>Especialidad</th>
      <th>Hospital</th>
      <th>Nacionalidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicos.each do |medico| %>
      <tr>
        <td><%= medico.nombre %></td>
        <td><%= medico.paterno %></td>
        <td><%= medico.materno %></td>
        <td><%= medico.sexo %></td>
        <td><%= medico.telefono %></td>
        <td><%= medico.edad %></td>
        <td><%= medico.especialidad.nombre %></td>
        <td><%= medico.hospital.nombre %></td>
        <td><%= medico.nacionalidad.nombre %></td>

        <td><%= link_to content_tag(:i, nil, class: "mostrar fas fa-eye", :title=> "Mostar"),medico %></td>

        <td><%= link_to content_tag(:i, nil, class: "editar fas fa-edit", :title=> "Editar"),edit_medico_path(medico) %></td>
                   
        <td><%= link_to content_tag(:i, nil, class: "eliminar fas fa-times", :title=> "Eliminar"), medico, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<div class="mx-auto">
  <%= will_paginate @medicos %>
</div>