<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>
<div class="col-md-12 mb-4 text-center" >
      <p id="alert"><%= alert %></p>
</div>

<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Usuarios</h1>
     
</div>

<div class="col-md-12 pt-4">
    <%= link_to 'Agregar nuevo', new_usuario_path, :class => "btng btn" %>
</div> 

<div class="col-md-12 pt-4">
     <h4>Búsqueda</h4>

  <%= form_tag(buscar_usuario_path, method: :post, :class => "form-inline") do %>
      <%= text_field_tag 'rfc', nil, placeholder: 'RFC', :class => "form-control mb-2 mr-sm-2" %>
      <%= text_field_tag 'curp', nil, placeholder: 'CURP', :class => "form-control mb-2 mr-sm-2" %>
      <%= text_field_tag 'nombre', nil, placeholder: 'Nombre', :class => "form-control mb-2 mr-sm-2" %>
      <%= text_field_tag 'paterno', nil, placeholder: 'Apellido paterno', :class => "form-control mb-2 mr-sm-2" %>
       <%= text_field_tag 'materno', nil, placeholder: 'Apellido materno', :class => "form-control mb-2 mr-sm-2" %>
        
      <button class="search btng btn mb-2"> Buscar</button>
  <% end %>    
</div>

<div class="col-md-12 pt-4 table-responsive">
<table class="table table-hover">
    <tr>
      <th>Rfc</th>
      <th>Curp</th>
      <th>Nombre</th>
      <th>Paterno</th>
      <th>Materno</th>
      <th>Edad</th>
      <th>Teléfono</th>
      <th>Correo</th>
      <th>Fecha nacimiento</th>
      <th>Sexo</th>
      <th>Nombre de usuario</th>
      <th>Contraseña</th>
      <th>Tipo de usuario</th>
      <th>Hospital</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.rfc %></td>
        <td><%= usuario.curp %></td>
        <td><%= usuario.nombre %></td>
        <td><%= usuario.paterno %></td>
        <td><%= usuario.materno %></td>
        <td><%= usuario.edad %></td>
        <td><%= usuario.telefono %></td>
        <td><%= usuario.correo %></td>
        <td><%= usuario.fecha_nacimiento %></td>
        <td><%= usuario.sexo %></td>
        <td><%= usuario.login %></td>
        <td><%= usuario.password %></td>
        <td><%= usuario.tipousuario.nombre %></td>
        <td><%= usuario.hospital.nombre %></td>
    
        <td><%= link_to content_tag(:i, nil, class: "mostrar fas fa-eye", :title=> "Mostar"),usuario %></td>

        <td><%= link_to content_tag(:i, nil, class: "editar fas fa-edit", :title=> "Editar"), edit_usuario_path(usuario) %></td>
                   
        <td><%= link_to content_tag(:i, nil, class: "eliminar fas fa-times", :title=> "Eliminar"), usuario, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


</div>
<div class="mx-auto">
  <%= will_paginate @usuarios %>
</div>


