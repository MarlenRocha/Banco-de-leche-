<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>

<div class="col-md-12 mb-4 text-center" >
      <p id="alert"><%= alert %></p>
</div>
<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Enfermedades</h1>
</div>

<div class="col-md-12 pt-4">
    <%= link_to 'Nueva enfermedad', new_enfermedad_path, :class => "btng btn" %>
</div> 

<div class="col-md-12 pt-4">
     <h4>Búsqueda</h4>
  <%= form_tag(buscar_enfermedad_path, method: :post, :class => "form-inline") do %>
      <%= text_field_tag 'nombre', nil, placeholder: 'Nombre', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'tipo', nil, placeholder: 'Tipo', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'clasificacion', nil, placeholder: 'Clasificación', :class => "form-control mb-2 mr-sm-2" %> 
      

      <button class="search btng btn mb-2"> Buscar</button>
  <% end %>    
</div>

<div class="col-md-12 pt-4 table-responsive-sm">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Nombre</th>
      <th scope="col">Descripción</th>
      <th scope="col">Tratamiento</th>
      <th scope="col">Tipo</th>
      <th scope="col">Clasificación</th>
      <th scope="col">Nueva</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enfermedades.each do |enfermedad| %>
      <tr>
        <td><%= enfermedad.nombre %></td>
        <td><%= enfermedad.descripcion %></td>
        <td><%= enfermedad.tratamiento %></td>
        <td><%= enfermedad.tipo %></td>
        <td><%= enfermedad.clasificacion %></td>
        <td><%= enfermedad.nueva %></td>

        <td><%= link_to content_tag(:i, nil, class: "mostrar fas fa-eye", :title=> "Mostar"),enfermedad %></td>

        <td><%= link_to content_tag(:i, nil, class: "editar fas fa-edit", :title=> "Editar"),edit_enfermedad_path(enfermedad) %></td>
                   
        <td><%= link_to content_tag(:i, nil, class: "eliminar fas fa-times", :title=> "Eliminar"), enfermedad, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<div class="mx-auto">
  <%= will_paginate @enfermedades %>
</div>