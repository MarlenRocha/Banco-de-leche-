<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>
<div class="col-md-12 mb-4 text-center" >
      <p id="alert"><%= alert %></p>
</div>

<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Donadoras</h1>
</div>

<div class="col-md-12 pt-4">
    <%= link_to 'Nueva donadora', donadora_nuevo_path, :class => "btng btn" %>
</div> 

<div class="col-md-12 pt-4">
  <h4>Búsqueda</h4>
  <%= form_tag(buscar_donadora_path, method: :post, :class => "form-inline") do %>
      <%= text_field_tag 'nombre', nil, placeholder: 'Nombre', :class => "form-control mb-2 mr-sm-2" %>
      <%= text_field_tag 'paterno', nil, placeholder: 'Apellido paterno', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'materno', nil, placeholder: 'Apellido materno', :class => "form-control mb-2 mr-sm-2" %> 
      <%= date_field_tag 'fecha_registro', nil, :class => "form-control mb-2 mr-sm-2" %> 
      <button class="search btng btn mb-2">Buscar</button>
  <% end %>    
</div>


<div class="col-md-12 pt-4 table-responsive-sm">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">CURP</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido paterno</th>
      <th scope="col">Apellido materno</th>
      <th scope="col">Fecha de registro</th>
      <th scope="col">Prueba de vih</th>
      <th scope="col">Prueba de sifilis</th>
      <th scope="col">Prueba de hepatitis</th>
      <th scope="col">Consumo de drogas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donadoras.each do |donadora| %>
      <tr>
        <td><%= donadora.curp %></td>
        <td><%= donadora.nombre %></td>
        <td><%= donadora.paterno %></td>
        <td><%= donadora.materno %></td>
        <td><%= donadora.fecha_registro %></td>
        <td><%= donadora.prueba_vih %></td>
        <td><%= donadora.prueba_sifilis %></td>
        <td><%= donadora.prueba_hepatitis %></td>
        <td><%= donadora.drogas %></td>
        <td><%= link_to content_tag(:i, nil, class: "mostrar fas fa-eye", :title=> "Mostar"),donadora_mostrar_path(donadora.id) %></td>

        <td><%= link_to content_tag(:i, nil, class: "editar fas fa-edit", :title=> "Editar"),donadora_editar_path(donadora.id) %></td>
                   
        <td><%= link_to content_tag(:i, nil, class: "eliminar fas fa-times", :title=> "Eliminar"), donadora_eliminar_path(donadora.id), method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<div class="mx-auto">
  <%= will_paginate @donadoras %>
</div>