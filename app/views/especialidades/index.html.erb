<div class="col-md-12 mb-4 text-center" >
      <p id="notice"><%= notice %></p>
</div>
<div class="col-md-12 mb-4 text-center" >
      <p id="alert"><%= alert %></p>
</div>

<div class="col-md-12 pb-2 " style="border-bottom: solid 3px #cf3b76; ">
      <h1>Especialidades</h1>
</div>

<div class="col-md-12 pt-4">
    <%= link_to 'Nueva especialidad', new_especialidad_path, :class => "btng btn" %>
</div> 

<div class="col-md-12 pt-4">
     <h4>Búsqueda</h4>
  <%= form_tag(buscar_especialidad_path, method: :post, :class => "form-inline") do %>
      <%= text_field_tag 'nombre', nil, placeholder: 'Nombre', :class => "form-control mb-2 mr-sm-2" %>
      
      <%= text_field_tag 'orientacion', nil, placeholder: 'Orientación', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'agrupacion', nil, placeholder: 'Agrupación', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'lugar', nil, placeholder: 'Lugar', :class => "form-control mb-2 mr-sm-2" %> 
      <%= text_field_tag 'anio', nil, placeholder: 'Año', :class => "form-control mb-2 mr-sm-2" %> 
     

      <button class="search btng btn mb-2"> Buscar</button>
  <% end %>    
</div>

<div class="col-md-12 pt-4 table-responsive-sm">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Orientación</th>
      <th>Agrupación</th>
      <th>Lugar</th>
      <th>Año</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @especialidades.each do |especialidad| %>
      <tr>
        <td><%= especialidad.nombre %></td>
        <td><%= especialidad.descripcion %></td>
        <td><%= especialidad.orientacion %></td>
        <td><%= especialidad.agrupacion %></td>
        <td><%= especialidad.lugar %></td>
        <td><%= especialidad.anio %></td>

        <td><%= link_to content_tag(:i, nil, class: "mostrar fas fa-eye", :title=> "Mostar"),especialidad %></td>

        <td><%= link_to content_tag(:i, nil, class: "editar fas fa-edit", :title=> "Editar"),edit_especialidad_path(especialidad) %></td>
                   
        <td><%= link_to content_tag(:i, nil, class: "eliminar fas fa-times", :title=> "Eliminar"), especialidad, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<div class="mx-auto">
  <%= will_paginate @especialidades %>
</div>