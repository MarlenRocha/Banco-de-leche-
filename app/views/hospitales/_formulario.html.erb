

	<div class="form-row">
    	<div class="form-group col-md-6">
           <%= form.label :nombre %>
		<%= form.text_field :nombre, :class => "form-control" %>
		<%= form.hidden_field :id %>        
        </div>
        <div class="form-group col-md-6">
            <%= form.label :descripción %>
		<%= form.text_field :descripcion, :class => "form-control" %>           
        </div> 
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
          <%= form.label :estado_id %>
            <%= form.select(:estado_id, @estados.collect{ |e| [e.nombre, e.id]}, {include_blank: 'Selecciona...'}, :class => "form-control") %>   
        </div>
    	
        <div class="form-group col-md-6">
            <%= form.label :dirección %>
		<%= form.text_field :direccion, :class => "form-control" %>          
        </div> 
    </div>

    <div class="form-row">
    	<div class="form-group col-md-6">
           <%= form.label :teléfono %>
        <%= form.text_field :telefono, :class => "form-control" %>      
        </div>
        <div class="form-group col-md-6">
            <%= form.label :correo %>
		<%= form.text_field :correo, :class => "form-control" %>          
        </div> 
    </div>

	
	<%= form.submit "Guardar", :class => "btng btn" %>
    <%= link_to 'Regresar', hospitales_inicio_path, :class => "btng btn" %>
	
	

